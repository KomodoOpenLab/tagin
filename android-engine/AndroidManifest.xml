<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.idi.taginsdk"
    android:versionCode="1"
    android:versionName="0.1a" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".tools.URNMonitor"
            android:label="@string/app_urn_monitor" >
            <intent-filter>
				<action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
        </activity>
        <activity
            android:name=".tools.LoggerHelp"
            android:label="@string/app_logger" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tools.Logger"
            android:label="@string/app_logger"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <service
            android:name="Fingerprinter"
            android:enabled="true" >
            <intent-filter>
                <action android:name="ca.idi.taginsdk.Fingerprinter" />
            </intent-filter>
        </service>
        <service
            android:name="TaginURN"
            android:enabled="true" >
            <intent-filter>
                <action android:name="ca.idi.taginsdk.TaginURN" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </service>

        <provider
            android:name="TaginProvider"
            android:authorities="ca.idi.tagin.taginprovider"
            android:syncable="true" />
    </application>

</manifest>